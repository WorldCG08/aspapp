@model List<aspapp.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count == 0)
{
    <text>There are no customers right now.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "CustomerDetails", "Customers", new {id = customer.Id}, null)
                </td>
                <td>@customer.MembershipType.Name</td>
                <td>
                    @Html.ActionLink(customer.Name, "Edit", "Customers", new {id = customer.Id}, null)
                </td>
            </tr>
        }
        </tbody>
    </table>
}