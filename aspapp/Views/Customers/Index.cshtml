@model System.Collections.Generic.List<aspapp.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count == 0)
{
    <text>There are no customers right now.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td><a href="/customers/details/@customer.Id">@customer.Name</a></td>
                <td>@customer.MembershipType.Name</td>
            </tr>
        }
        </tbody>
    </table>
}