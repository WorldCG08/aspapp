@model List<aspapp.Models.Movie>

@if (Model.Count == 0)
{
    <text>There are no movies right now.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <a href="/movies/details/@movie.Id">@movie.Name</a>
                </td>
                <td>@String.Join(", ", movie.Genres.Select(g => g.Name).ToArray())</td>
            </tr>
        }
        </tbody>
    </table>
}