@model List<aspapp.Models.Movie>

@Html.ActionLink("Add Movie", "Add", "Movies", null, new {@class = "btn btn-primary btn-lg"})
@if (Model.Count == 0)
{
    <text>There are no movies right now.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "MovieDetails", "Movies", new {id = movie.Id}, null)
                </td>
                <td>@String.Join(", ", movie.Genres.Select(g => g.Name).ToArray())</td>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)
                </td>
            </tr>
        }
        </tbody>
    </table>
}